@model List<StellerAcunMedyaAkademiPortfolio.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Services</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Service Name</th>
        <th>Icon</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Make Active</th>
        <th>Make Passive</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.ServiceName</th>
            <td>@item.ServiceIconUrl</td>
            <td>@(item.ServiceStatus==true? "Active":"Passive")</td>


            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-info">Update</a></td>
            <td><a href="/Service/MakeActive/@item.ServiceId" class="btn btn-outline-success">Make Active</a></td>
            <td><a href="/Service/MakePassive/@item.ServiceId" class="btn btn-outline-secondary">Make Passive</a></td>
        </tr>

    }
</table>
<br />

<a href="/Service/AddService" class="btn btn-outline-primary">Add New Service</a>



