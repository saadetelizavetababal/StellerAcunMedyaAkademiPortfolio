@model List<StellerAcunMedyaAkademiPortfolio.Models.TblAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>About Page</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Description</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            @*<th>@item.AboutId</th>*@
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.Title</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Update</a></td>

        </tr>
    }

</table>
<br />

<a href="/About/AddAbout" class="btn btn-outline-primary">Add New About Information</a>
