@model List<StellerAcunMedyaAkademiPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //int count = 0;
}

<h2>Contact</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th>Map Url</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {
        //count++;
        <tr>
            @*<th>@count</th>*@
            <th>@item.ContactId</th>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td><a href="@item.MapUrl" target="_blank">Map Link</a></td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-info">Update</a></td>
        </tr>

    }
</table>
<br />

<a href="/Contact/AddContact" class="btn btn-outline-primary">Add New Contact</a>

