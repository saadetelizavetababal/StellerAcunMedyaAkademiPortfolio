@model List<StellerAcunMedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Reference List</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            @*<td><a href="@item.Description" target="_blank">GitHub Link</a></td>*@
            <td><a href="/Reference/DeleteReference/@item.TestimonialId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Reference/UpdateReference/@item.TestimonialId" class="btn btn-outline-info">Update</a></td>
        </tr>

    }
</table>
<br />

<a href="/Reference/AddReference" class="btn btn-outline-primary">Add New Reference</a>

