@model StellerAcunMedyaAkademiPortfolio.Models.TblSkill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Update Skill Page</h3>

<form method="post">
    @Html.HiddenFor(x=>x.SkillId)
    <label>Skill Name</label>
    @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
    <br />
    <label>Title</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Description</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
    <br />
    <label>Value</label>
    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Update</button>

</form>


