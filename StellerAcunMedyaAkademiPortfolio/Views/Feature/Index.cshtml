@model List<StellerAcunMedyaAkademiPortfolio.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Feature Page</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Name Surname</th>
        <th>Job</th>
        <th>Cv Link</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl"style="height:50px;width:50px"/></td>
            <td>@item.Title</td>
            <td>@item.NameSurname</td>
            <td>@item.Job</td>
            <td><a href="@item.CvDownloadUrl" target="_blank">Cv Download Link</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-info">Update</a></td>
        </tr>

    }
</table>
<br />

<a href="/Feature/AddFeature" class="btn btn-outline-primary">Add New Feature</a>

