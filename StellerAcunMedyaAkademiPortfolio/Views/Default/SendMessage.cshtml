@model StellerAcunMedyaAkademiPortfolio.Models.TblMessage

<div class="form">
    <h6 class="subtitle">Available 24/7</h6>
    <h6 class="section-title mb-4">Get In Touch</h6>
    <form method="post" action="/Default/SendMessage">
        <div class="form-group">
            <input type="email" name="Email" class="form-control" @*id="exampleInputEmail1" aria-describedby="emailHelp"*@ placeholder="Email" required>
        </div>
        <div class="form-group">
            <input type="text" name="NameSurname" class="form-control" @*id="exampleInputPassword1"*@ placeholder="Name Surname" required>
        </div>
        <div class="form-group">
            <textarea name="MessageContent" id="" cols="30" rows="5" class="form-control" placeholder="Message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block rounded w-lg">Send Message</button>
    </form>
</div>
