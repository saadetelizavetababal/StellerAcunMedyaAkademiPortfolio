@model List<StellerAcunMedyaAkademiPortfolio.Models.TblFeature>
<header class="header" id="home">
    @foreach (var item in Model)
    {
    <div class="container">
        <div class="infos">
            <h6 class="subtitle">@item.Title</h6>
            <h6 class="title">@item.NameSurname</h6>
            <p>@item.Job</p>

            <div class="buttons pt-3">
                <button class="btn btn-primary rounded">CONTACT ME</button>
                <a class="btn btn-dark rounded" href="@item.CvDownloadUrl" target="_blank">DOWNLOAD CV</a>
            </div>

            @Html.Action("DefaultSocialMediaPartial")
        </div>
        <div class="img-holder">
            <img src="@item.ImageUrl" alt=""  style="height:500px;width:500px">
        </div>
    </div>
    }
    <!-- Header-widget -->
    <div class="widget">
        <div class="widget-item">
            <h2>@ViewBag.testimonial</h2>
            <p>References</p>
        </div>
        <div class="widget-item">
            <h2>@ViewBag.project</h2>
            <p>Projects Completed</p>
        </div>
        <div class="widget-item">
            <h2>@ViewBag.skill</h2>
            <p>Skills</p>
        </div>
    </div>
</header>
