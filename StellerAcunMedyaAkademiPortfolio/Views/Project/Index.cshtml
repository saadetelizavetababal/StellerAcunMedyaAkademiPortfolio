@model List<StellerAcunMedyaAkademiPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Projects</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Project Name</th>
        <th>Description</th>
        <th>GitHub Url</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="@item.GitHubUrl" target="_blank">GitHub Link</a></td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-info">Update</a></td>
        </tr>

    }
</table>
<br />

<a href="/Project/AddProject" class="btn btn-outline-primary">Add New Project</a>