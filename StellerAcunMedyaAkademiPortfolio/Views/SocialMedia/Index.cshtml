@model List<StellerAcunMedyaAkademiPortfolio.Models.TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Social Media</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Social Media Name</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><a href="@item.Url" target="_blank">@item.SocialMediaName</a></td>

            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-info">Update</a></td>
        </tr>

    }
</table>
<br />

<a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-primary">Add Social Media</a>

